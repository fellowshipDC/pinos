.container-fluid .row 
    margin-bottom 100px
    .text
        font-family 'Roboto Slab', serif
        overflow-wrap break-word
        h3  
            color #3F3F3F
            font-size 70px
            font-weight 700
        p.lead
            color #7C7C7C
            font-size 30px
            font-weight 700
            margin-bottom 30px
        p a   
            color #3F3F3F
        hr   
            margin-top 5%
    .form
        font-family 'Raleway', sans-serif
        margin-top 35px
        h4  
            margin-bottom 20px
        .form-check .form-check-label
            margin-left 50px


@media screen and (max-width: 767)
    .container-fluid .row 
        .text
            h3
                font-size 60px  
        .form .form-check .form-check-label
            margin auto
@media screen and (max-width: 575px)
    .container-fluid .row .text
        h3
            font-size 50px
        p.lead
            font-size 25px

        