.container-fluid .row 
    margin-bottom 100px
    .text
        font-family 'Roboto Slab', serif
        overflow-wrap break-word
        h3  
            color #3F3F3F
            font-size 70px
            font-weight 700
        p.lead
            color #7C7C7C
            font-size 30px
            font-weight 700
            margin-bottom 30px
        p a   
            color #3F3F3F
            text-decoration underline
        p a:hover
            color #7C7C7C
        hr.top  
            margin-bottom 10%
        hr.bottom 
            margin-top 10%
    .form
        font-family 'Raleway', sans-serif
        margin-top 35px
        h4  
            margin-bottom 20px
        .form-group
            margin-top 35px
            .form-check .form-check-label
                margin-left 50px
        button
            margin-top 15px
        .seemore
            line-height 30px
            font-weight 700
            #discover1, #discover2
                margin-left 30px
                display none
            #targetgraph 
                margin-left 60px
                &::ng-deep
                    .bar
                        fill #7C7C7C
                        .label
                            font-size 12px
                            color #3F3F3F
                            fill #3F3F3F
                    .y-axis
                        fill none
                        stroke #3F3F3F
                        stroke-opacity 0.2
                        font-size 13px
                        color rgba(0,0,0,0.5)
            #sectorgraph 
                margin-left 60px
                &::ng-deep
                    .bar
                        fill #7C7C7C
                        .label
                            font-size 12px
                            color #3F3F3F
                            fill #3F3F3F
                    .y-axis
                        fill none
                        stroke #3F3F3F
                        stroke-opacity 0.2
                        font-size 13px
                        color rgba(0,0,0,0.5)

@media screen and (max-width: 767)
    .container-fluid .row 
        .text
            h3
                font-size 60px  
        .form 
            .form-check .form-check-label
                margin auto
            .seemore
                font-size 17px
                #targetgraph 
                    margin-left 0
                #sectorgraph 
                    margin-left 0
@media screen and (max-width: 575px)
    .container-fluid .row 
        .text
            h3
                font-size 30px
            p.lead
                font-size 20px
            p a  
                font-size 18px
        .form
            h4  
                font-size 18px
            p   
                font-size 14px
            .form-group div#form1 .form-check .form-check-label
                font-size 13px
            .form-group div#form2 .form-check .form-check-label
                font-size 13px
            .seemore
                font-size 14px
            button
                font-size 13px

        