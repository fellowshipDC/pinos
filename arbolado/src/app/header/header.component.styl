.header 
    min-height 50vh
    .row .text
        font-family 'Roboto Slab', serif
        color #ffffff
        z-index 9999
        overflow-wrap break-word
        line-height 0.9
        h1 
            margin-top 4%
            font-size 75px
            font-weight 700
        p  
            font-size 40px
            margin-bottom 1%
            font-weight 700


.header::after
    height 50vh
    min-height 300px
    content ""
    z-index -1
    background-image url('http://vicmas.com/datacivica/fellowship/deforestacion/images/arbolits.jpg?crc=3910483410')
    background-repeat no-repeat
    background-size cover
    filter brightness(0.5)
    -webkit-filter brightness(0.5)
    top 0
    left 0
    bottom 0
    right 0
    position absolute
    overflow hidden

@media screen and (max-width: 767px)
    .header 
        min-height 50vh
        .row .text
            h1  
                margin-top 10%
                font-size 65px
            p  
                font-size 30px
    .header::after
        height 50vh
        min-height 350px
@media screen and (max-width: 575px)
    .header 
        min-height 60vh
        .row .text
            h1  
                margin-top 10%
                font-size 58px
            p  
                font-size 28px
    .header::after
        height 60vh
        min-height 400px
    